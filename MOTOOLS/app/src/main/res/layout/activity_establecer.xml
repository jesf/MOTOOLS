<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_establecer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.software2_ucc.proy2.Establecer"
    android:background="@drawable/fondo">

    <TextView
        android:text="UBICACIÓN ACTUAL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Latitud:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:id="@+id/LA"
        android:layout_below="@+id/LO"
        android:layout_alignLeft="@+id/LO"
        android:layout_alignStart="@+id/LO"
        android:layout_alignRight="@+id/LO"
        android:layout_alignEnd="@+id/LO" />

    <TextView
        android:text="Longitud: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:id="@+id/LO"
        android:layout_below="@+id/textView"
        android:layout_alignRight="@+id/IUbi"
        android:layout_alignEnd="@+id/IUbi" />

    <Button
        android:text="ESTABLECER"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:id="@+id/EU"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:onClick="eventEst"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/ubi2" />

    <Button
        android:text="ALERTA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/GU"
        android:layout_marginLeft="27dp"
        android:layout_marginStart="27dp"
        android:onClick="eventAlert"
        android:layout_alignBaseline="@+id/EU"
        android:layout_alignBottom="@+id/EU"
        android:layout_toRightOf="@+id/NLA"
        android:layout_toEndOf="@+id/NLA"
        android:background="@drawable/alerta2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text|number"
        android:ems="10"
        android:id="@+id/NLA"
        android:layout_alignBaseline="@+id/LA"
        android:layout_alignBottom="@+id/LA"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text|number"
        android:ems="10"
        android:id="@+id/NLO"
        android:layout_alignBaseline="@+id/LO"
        android:layout_alignBottom="@+id/LO"
        android:layout_alignLeft="@+id/NLA"
        android:layout_alignStart="@+id/NLA" />

    <TextView
        android:text="Dirección"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Dir"
        android:layout_marginTop="17dp"
        android:layout_below="@+id/LA"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/SDir"
        android:inputType="text|number"
        android:layout_below="@+id/Dir"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
